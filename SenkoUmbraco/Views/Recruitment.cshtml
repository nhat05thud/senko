@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var current = CurrentPage;
}

@* the fun starts here *@
@Html.Partial("/Views/Partials/Layout/_Banner.cshtml")
<div class="container">
    <div class="wrap-920">
        <h1 class="page-title">@current.Name</h1>
        <div class="bor-acc">
            <div class="tin-accodion">
                <div class="accodion-head">
                    <div class="td-location">@Umbraco.GetDictionaryValue("ViTriDangTuyen")</div>
                    <div class="td-number">@Umbraco.GetDictionaryValue("SoLuongCanTuyen")</div>
                    <div class="td-time">@Umbraco.GetDictionaryValue("ThoiGianDangTuyen")</div>
                </div>
                <div class="accodion-content">
                    @foreach (var item in current.Children())
                    {
                        <div class="faq">
                            <div class="tin-title @(current.Children().IndexOf(item) == 0 ? "active" : "")">
                                <div class="td-location">@item.Name</div>
                                <div class="td-number">@item.GetPropertyValue("soLuong")</div>
                                <div class="td-time">@item.GetPropertyValue("thoiGian")</div>
                            </div>
                            <div class="tin-content">
                                <div class="content-wrap">
                                    @item.GetPropertyValue("content")
                                    @*<div class="td-form">
                                        <div class="btn-ut" data-toggle="modal" data-target="#modalRecruitment">form ứng tuyển</div>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="clr"></div>
    <div class="mgb-50"></div>
</div>
<!-- Modal -->
<div class="modal fade modalRecrui" id="modalRecruitment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <img src="/images/btnClose.png" alt="" />
                </button>
                <h4 class="modal-title" id="modalRecruitmentLabel">Form ứng tuyển trực tuyến</h4>
            </div>
            <div class="modal-body">
                <p><i>Vui lòng điền đầy đủ thông tin bên dưới</i></p>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Họ tên ứng viên" value="" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Địa chỉ" value="" />
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-7">
                            <input type="text" class="form-control" placeholder="Email" value="" />
                        </div>
                        <div class="col-md-5 pdl-0">
                            <input type="text" class="form-control" placeholder="Số điện thoại" value="" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <textarea name cols="" class="form-control" placeholder="Mô tả kỹ năng" rows=""></textarea>
                </div>
                <div class="form-group">
                    <div class="row">
                        <span class="col-md-4">File Đính Kèm:</span>
                        <div class="col-md-8">
                            <input type="file" class="form-control" value="" />
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <input type="submit" value="ỨNG TUYỂN" />
                </div>
            </div>
        </div>
    </div>
</div>
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using System.Web.Optimization
@{
    Layout = null;
    var current = CurrentPage;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(current.Name == "Vi" || current.Name == "En" ? "Senko" : current.Name )</title>
    @RenderSection("headerShare", required: false)
    @Styles.Render("~/bundles/style")
    @Scripts.Render("~/bundles/topJS")
    <script type="text/javascript">    jwplayer.key = "5qMQ1qMprX8KZ79H695ZPnH4X4zDHiI0rCXt1g==";</script>
    @{
        if (Request.Browser.Browser == "InternetExplorer" || Request.Browser.Browser == "IE")
        {
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&subset=latin-ext,cyrillic,cyrillic-ext" />
        }
    }
</head>
<body>
    <div id="wrapper">
        <div id="wrapper-in">
            <div id="header">
                @Html.Partial("/Views/Partials/Layout/_Header.cshtml")
            </div>
            <div class="clr"></div>
            <div id="main-content">
                @RenderBody()
            </div>
            <footer id="footer">
                @Html.Partial("/Views/Partials/Layout/_Footer.cshtml")
            </footer>
        </div>
        <!--menumobile-->
        <div id="menumobile" class="mobile-panel mobilep-left">
            <div class="close-menu">
                <a href="#menumobile" class="glyphicon glyphicon-remove-circle">close</a>
            </div>
            <div class="menu-in">
                <div class="menu-mobile">
                    <div class="logo">
                        <a id="A2" href="/">
                            <img class="img-responsive" src="/images/logo-1.png" alt="logo" />
                        </a>
                    </div>
                    <ul id="menuMobiles" class="menu-nav">
                        <li class="home"><a id="A3" href="/">Trang chủ</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!--menumobile-->
    </div>
    <a href="#" class="scroll-to-top"><i class="glyphicon glyphicon-chevron-up"></i></a>
    @Scripts.Render("~/bundles/botJS")
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src=" https://www.googletagmanager.com/gtag/js?id=UA-119900426-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-119900426-1');
    </script>
</body>
</html>

@using SenkoUmbraco.Controllers
@using SenkoUmbraco.Models
@using SenkoUmbraco
@inherits UmbracoViewPage<SendMailViewModel>
@{
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}
<style type="text/css">
    .field-validation-error span {
        color: red !important;
        font-size: 12px;
    }
</style>
@if (Convert.ToBoolean(TempData["IsSuccessful"]) == true)
{
    <script type="text/javascript">
        $('#alertMessSuccess').html("Send success!!!").show();
    </script>
}
@using (Html.BeginUmbracoForm<SiteController>("HandleContactForm"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <p class="title">Họ tên</p>
        <div class="wrap-input">
            @Html.TextBoxFor(model => model.Name, new { @class = "type-input" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        <p class="title">Email</p>
        <div class="wrap-input">
            @Html.TextBoxFor(model => model.Email, new { @class = "type-input" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>
    <div class="form-group">
        <p class="title">Điện thoại</p>
        <div class="wrap-input">
            @Html.TextBoxFor(model => model.Phone, new { @class = "type-input" })
            @Html.ValidationMessageFor(x => x.Phone)
        </div>
    </div>
    <div class="form-group">
        <p class="title">Tin nhắn</p>
        <div class="wrap-input">
            @Html.TextAreaFor(model => model.Message, new { @class = "type-input type-textarea" })
            @Html.ValidationMessageFor(x => x.Message)
        </div>
    </div>
    <div class="text-right">
        <input type="submit" value="@Umbraco.GetDictionaryValue("GuiTin")" />
    </div>
}
<script src="/scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="/scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<script src="/scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
